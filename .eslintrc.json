{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "plugin:prettier/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
		"indent": ["error", "tab"],
    "quotes": ["error", "double"],
		"semi": ["error", "always"],
		"@typescript-eslint/indent": ["error", "tab"]
  }
}
